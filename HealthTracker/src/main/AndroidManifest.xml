<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fortytwodragons.healthtracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.fortytwodragons.healthtracker.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fortytwodragons.healthtracker.ListActivity"
            android:label="@string/title_activity_list"
            android:parentActivityName="com.fortytwodragons.healthtracker.MainActivity" >
        </activity>
        <activity
            android:name="com.fortytwodragons.healthtracker.EntryListActivity"
            android:label="@string/title_entry_list" >
        </activity>
        <activity
            android:name="com.fortytwodragons.healthtracker.EntryDetailActivity"
            android:label="@string/title_entry_detail"
            android:parentActivityName=".EntryListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EntryListActivity" />
        </activity>
    </application>

</manifest>
